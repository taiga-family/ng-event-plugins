{
    "name": "ng-event-plugins",
    "version": "5.0.0",
    "private": true,
    "description": "This is a library for optimizing performance sensitive events and declarative preventDefault and stopPropagation",
    "keywords": [
        "angular",
        "ng",
        "preventDefault",
        "stopPropagation",
        "event",
        "filter",
        "EventManager",
        "EventManagerPlugin",
        "performance",
        "optimization",
        "optimize",
        "change",
        "detection"
    ],
    "homepage": "https://github.com/taiga-family/ng-event-plugins#README",
    "bugs": "https://github.com/taiga-family/ng-event-plugins/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/taiga-family/ng-event-plugins"
    },
    "license": "Apache-2.0",
    "workspaces": [
        "projects/*"
    ],
    "scripts": {
        "build": "nx build ng-event-plugins && node tools/prepare-web-types.mjs",
        "build:demo": "nx build demo",
        "postinstall": "husky",
        "lint": "eslint .",
        "nx": "nx",
        "prettier": "prettier '**/*.{svg,yml,js,ts,html,md,less,json}'",
        "release": "npx syncer && npx nx publish ng-event-plugins",
        "start": "nx serve demo",
        "start:ssr": "nx run demo:serve-ssr",
        "stylelint": "stylelint '**/*.{less,css}'",
        "test": "nx test ng-event-plugins"
    },
    "commitlint": {
        "extends": [
            "@taiga-ui/commitlint-config"
        ]
    },
    "lint-staged": {
        "*.less": [
            "stylelint --fix"
        ],
        "*.{js,ts,html}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{svg,yml,md,less,json}": [
            "prettier --write"
        ]
    },
    "browserslist": [
        "extends @taiga-ui/browserslist-config"
    ],
    "prettier": "@taiga-ui/prettier-config",
    "stylelint": {
        "extends": [
            "@taiga-ui/stylelint-config"
        ]
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "19.2.19",
        "@angular-devkit/core": "19.2.19",
        "@angular/animations": "19.2.17",
        "@angular/build": "19.2.19",
        "@angular/cli": "19.2.19",
        "@angular/common": "19.2.17",
        "@angular/compiler": "19.2.17",
        "@angular/compiler-cli": "19.2.17",
        "@angular/core": "19.2.17",
        "@angular/forms": "19.2.17",
        "@angular/language-service": "19.2.17",
        "@angular/platform-browser": "19.2.17",
        "@angular/platform-browser-dynamic": "19.2.17",
        "@angular/platform-server": "19.2.17",
        "@angular/router": "19.2.17",
        "@nx/jest": "21.6.10",
        "@nx/workspace": "21.6.10",
        "@taiga-ui/configs": "0.382.0",
        "@taiga-ui/syncer": "0.382.0",
        "@types/estree": "1.0.8",
        "@types/express": "5.0.6",
        "@types/jest": "29.5.14",
        "@types/node": "24.10.7",
        "core-js": "3.47.0",
        "husky": "9.1.7",
        "less": "4.5.1",
        "ng-packagr": "19.2.2",
        "ngx-highlightjs": "10.0.0",
        "nx": "21.6.10",
        "rxjs": "7.8.2",
        "ts-node": "10.9.2",
        "tslib": "2.8.1",
        "typescript": "5.8.3"
    },
    "authors": [
        "Alex Inkin <a.inkin@tinkoff.ru>",
        "Roman Sedov <r.sedov@tinkoff.ru>"
    ],
    "syncer": {
        "includePaths": [
            "./projects",
            "./package-lock.json"
        ],
        "matchPackageNames": [
            "@taiga-ui/event-plugins",
            "ng-event-plugins"
        ]
    },
    "web-types": "./projects/ng-event-plugins/web-types.json"
}
