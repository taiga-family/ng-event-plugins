{
    "name": "ng-event-plugins",
    "version": "4.3.1",
    "private": true,
    "description": "This is a library for optimizing performance sensitive events and declarative preventDefault and stopPropagation",
    "keywords": [
        "angular",
        "ng",
        "preventDefault",
        "stopPropagation",
        "event",
        "filter",
        "EventManager",
        "EventManagerPlugin",
        "performance",
        "optimization",
        "optimize",
        "change",
        "detection"
    ],
    "homepage": "https://github.com/taiga-family/ng-event-plugins#README",
    "bugs": "https://github.com/taiga-family/ng-event-plugins/issues",
    "repository": "https://github.com/taiga-family/ng-event-plugins",
    "license": "Apache-2.0",
    "workspaces": [
        "projects/*"
    ],
    "scripts": {
        "postinstall": "husky install",
        "nx": "nx",
        "start": "nx serve demo",
        "start:ssr": "nx run demo:serve-ssr",
        "serve:ssr": "node dist/demo/server/main.js",
        "build:ssr": "nx build && nx run demo:server",
        "prerender": "nx run demo:prerender",
        "build": "nx build ng-event-plugins && node tools/prepare-web-types.mjs",
        "build:demo": "nx build demo",
        "test": "nx test ng-event-plugins",
        "stylelint": "stylelint '**/*.{less,css}'",
        "lint": "eslint .",
        "prettier": "prettier '**/*.{svg,yml,js,ts,html,md,less,json}'",
        "release": "npx syncer && npx nx publish ng-event-plugins"
    },
    "commitlint": {
        "extends": [
            "@taiga-ui/commitlint-config"
        ]
    },
    "lint-staged": {
        "*.less": [
            "stylelint --fix"
        ],
        "*.{js,ts,html}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{svg,yml,md,less,json}": [
            "prettier --write"
        ]
    },
    "browserslist": [
        "extends @taiga-ui/browserslist-config"
    ],
    "prettier": "@taiga-ui/prettier-config",
    "eslintConfig": {
        "extends": [
            "plugin:@taiga-ui/experience/all"
        ],
        "rules": {
            "@typescript-eslint/ban-types": "off",
            "import/no-webpack-loader-syntax": "off"
        },
        "root": true
    },
    "stylelint": {
        "extends": [
            "@taiga-ui/stylelint-config"
        ]
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "16.2.16",
        "@angular-devkit/core": "16.2.16",
        "@angular/cli": "16.2.16",
        "@angular/common": "16.2.12",
        "@angular/compiler": "16.2.12",
        "@angular/compiler-cli": "16.2.12",
        "@angular/core": "16.2.12",
        "@angular/forms": "16.2.12",
        "@angular/language-service": "16.2.12",
        "@angular/platform-browser": "16.2.12",
        "@angular/platform-browser-dynamic": "16.2.12",
        "@angular/platform-server": "16.2.12",
        "@angular/router": "16.2.12",
        "@commitlint/cli": "19.6.0",
        "@commitlint/config-conventional": "19.6.0",
        "@nguniversal/builders": "16.2.0",
        "@nguniversal/express-engine": "16.2.0",
        "@nx/jest": "20.1.3",
        "@nx/workspace": "20.1.3",
        "@taiga-ui/auto-changelog-config": "0.235.0",
        "@taiga-ui/browserslist-config": "0.235.0",
        "@taiga-ui/commitlint-config": "0.235.0",
        "@taiga-ui/eslint-plugin-experience": "0.235.0",
        "@taiga-ui/prettier-config": "0.235.0",
        "@taiga-ui/release-it-config": "0.235.0",
        "@taiga-ui/stylelint-config": "0.235.0",
        "@taiga-ui/syncer": "0.235.0",
        "@taiga-ui/tsconfig": "0.235.0",
        "@types/estree": "1.0.6",
        "@types/express": "5.0.0",
        "@types/jest": "29.5.14",
        "@types/node": "22.10.0",
        "core-js": "3.39.0",
        "husky": "9.1.7",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "jest-preset-angular": "14.3.3",
        "lint-staged": "15.2.10",
        "ng-packagr": "16.2.3",
        "ngx-highlightjs": "10.0.0",
        "nx": "20.1.3",
        "raw-loader": "4.0.2",
        "rxjs": "7.5.7",
        "ts-jest": "29.2.5",
        "ts-node": "10.9.2",
        "tslib": "2.8.1",
        "typescript": "5.0.4"
    },
    "authors": [
        "Alex Inkin <a.inkin@tinkoff.ru>",
        "Roman Sedov <r.sedov@tinkoff.ru>"
    ],
    "syncer": {
        "includePaths": [
            "./projects",
            "./package-lock.json"
        ],
        "matchPackageNames": [
            "@taiga-ui/event-plugins",
            "ng-event-plugins"
        ],
        "ignorePackageNames": []
    },
    "web-types": "./projects/ng-event-plugins/web-types.json"
}
