{
    "name": "@taiga-ui/event-plugins",
    "version": "4.0.1",
    "private": true,
    "description": "This is a library for optimizing performance sensitive events and declarative preventDefault and stopPropagation",
    "keywords": [
        "angular",
        "ng",
        "preventDefault",
        "stopPropagation",
        "event",
        "filter",
        "EventManager",
        "EventManagerPlugin",
        "performance",
        "optimization",
        "optimize",
        "change",
        "detection"
    ],
    "homepage": "https://github.com/taiga-family/ng-event-plugins#README",
    "bugs": "https://github.com/taiga-family/ng-event-plugins/issues",
    "repository": "https://github.com/taiga-family/ng-event-plugins",
    "license": "Apache-2.0",
    "workspaces": [
        "projects/*"
    ],
    "scripts": {
        "postinstall": "husky install",
        "nx": "nx",
        "start": "nx serve demo",
        "start:ssr": "nx run demo:serve-ssr",
        "serve:ssr": "node dist/demo/server/main.js",
        "build:ssr": "nx build && nx run demo:server",
        "prerender": "nx run demo:prerender",
        "build": "nx build ng-event-plugins",
        "build:demo": "nx build demo",
        "test": "nx test ng-event-plugins",
        "stylelint": "stylelint '**/*.{less,css}'",
        "lint": "eslint .",
        "prettier": "prettier '**/*.{svg,yml,js,ts,html,md,less,json}' !CHANGELOG.md"
    },
    "commitlint": {
        "extends": [
            "@taiga-ui/commitlint-config"
        ]
    },
    "lint-staged": {
        "*.less": [
            "stylelint --fix"
        ],
        "*.{js,ts,html}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{svg,yml,md,less,json}": [
            "prettier --write"
        ]
    },
    "browserslist": [
        "extends @taiga-ui/browserslist-config"
    ],
    "prettier": "@taiga-ui/prettier-config",
    "eslintConfig": {
        "extends": [
            "plugin:@taiga-ui/experience/all"
        ],
        "rules": {
            "@typescript-eslint/ban-types": "off",
            "import/no-webpack-loader-syntax": "off"
        },
        "root": true
    },
    "stylelint": {
        "extends": [
            "@taiga-ui/stylelint-config"
        ]
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "16.2.14",
        "@angular-devkit/core": "16.2.14",
        "@angular/cli": "16.2.14",
        "@angular/common": "16.2.12",
        "@angular/compiler": "16.2.12",
        "@angular/compiler-cli": "16.2.12",
        "@angular/core": "16.2.12",
        "@angular/forms": "16.2.12",
        "@angular/language-service": "16.2.12",
        "@angular/platform-browser": "16.2.12",
        "@angular/platform-browser-dynamic": "16.2.12",
        "@angular/platform-server": "16.2.12",
        "@angular/router": "16.2.12",
        "@commitlint/cli": "19.4.0",
        "@commitlint/config-conventional": "19.2.2",
        "@nguniversal/builders": "16.2.0",
        "@nguniversal/express-engine": "16.2.0",
        "@nx/jest": "19.6.2",
        "@nx/workspace": "19.6.2",
        "@release-it-plugins/workspaces": "4.2.0",
        "@release-it/conventional-changelog": "8.0.1",
        "@taiga-ui/browserslist-config": "0.144.13",
        "@taiga-ui/eslint-plugin-experience": "0.144.13",
        "@taiga-ui/prettier-config": "0.144.13",
        "@taiga-ui/stylelint-config": "0.144.13",
        "@taiga-ui/tsconfig": "0.144.13",
        "@types/estree": "1.0.5",
        "@types/express": "4.17.21",
        "@types/jasmine": "5.1.4",
        "@types/jasminewd2": "2.0.13",
        "@types/node": "22.5.0",
        "core-js": "3.38.1",
        "husky": "9.1.5",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "jest-preset-angular": "14.2.2",
        "lint-staged": "15.2.9",
        "ng-packagr": "16.2.3",
        "ngx-highlightjs": "10.0.0",
        "nx": "19.6.2",
        "raw-loader": "4.0.2",
        "release-it": "17.6.0",
        "rxjs": "7.5.7",
        "ts-jest": "29.2.5",
        "ts-node": "10.9.2",
        "tslib": "2.7.0",
        "typescript": "5.0.4",
        "zone.js": "0.13.3"
    },
    "engines": {
        "node": ">= 16",
        "npm": ">= 8"
    },
    "authors": [
        "Alex Inkin <a.inkin@tinkoff.ru>",
        "Roman Sedov <r.sedov@tinkoff.ru>"
    ],
    "web-types": "./projects/ng-event-plugins/web-types.json"
}
